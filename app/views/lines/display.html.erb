<div class="container">
  <% @lines.each do |line| %>
  <h2><%=line.name%></h2>
  <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Name_kanji</th>
      <th scope="col">Name_kana</th>
      <th scope="col">Coordinates</th>
      <th scope="col">Lines</th>
      <th scope="col">Address</th>
    </tr>
  </thead>
  <tbody>
    <%line.stations.each do |station|%>
    <tr>
      <td><%=station.id%></td>
      <td><%=station.name%></td>
      <td><%=station.name_kanji%></td>
      <td><%=station.name_kana%></td>
      <td><%="#{station.lat}, #{station.lon}"%></td>
      <td><%=station.lines_code%></td>
      <td><%=station.address%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%end%>
</div>
